<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:background="@color/red"
                android:layout_width="match_parent"
                android:layout_height="40dp">


            <TextView
                android:textColor="#fff"
                android:layout_centerInParent="true"
                android:text="MESSAGE ERROR"
                android:textStyle="bold"
                android:fontFamily="@font/mregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </RelativeLayout>


            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/imgError"
                android:layout_centerInParent="true"
                android:layout_below="@+id/relativeLayout"
                android:background="@drawable/erroricon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/txtMessageError"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/imgError"
                android:textColor="#000"
                android:fontFamily="@font/mregular"
                android:textStyle="bold"
                android:text="TURN ON AUTOMATIC ZONE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/txtMessageError"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnCancelZone"
                    android:background="@drawable/btn_outline"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:text="CANCEL"
                    android:fontFamily="@font/mregular"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnOkayZone"
                    android:background="@drawable/btn_outline"
                    android:textStyle="bold"
                    android:text="OK"
                    android:fontFamily="@font/mregular"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>