<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:background="@color/red"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/mregular"
                android:text="MESSAGE ERROR"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

            <ImageView
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:id="@+id/imgError"
                android:layout_below="@+id/relativeLayout"
                android:background="@drawable/erroricon"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/txtMessageError"
                android:textStyle="bold"
                android:fontFamily="@font/mregular"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_below="@+id/imgError"
                android:text="Your App is Already Expired, Activate a new Activation Code"
                android:layout_marginTop="10dp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnRenew"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txtMessageError"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/mregular"
                android:text="SCAN/REGISTER CODE"
                android:background="@color/red"
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

            <Button
                android:id="@+id/btnOkay"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/btnRenew"
                android:textColor="#fff"
                android:textStyle="bold"
                android:fontFamily="@font/mregular"
                android:text="OK"
                android:background="@color/red"
                android:layout_marginLeft="25dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="35dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>